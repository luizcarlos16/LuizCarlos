@model IEnumerable<Model.Tables.Category>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Category List";
}

<div class="panel	panel-primary">
    <div class="panel-heading">
        List of registered CATEGORIES
    </div>
    <div class="panel-body">
        <table class="table	table-striped	table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID })|
                            @Html.ActionLink("Details", "Details", new { id = item.CategoryID })|
                            @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>				<div class="panel-footer	panel-info">

        @Html.ActionLink("Create New Category", "Create", null, new { @class = "btn	btn-success" })
    </div>

    @section styles{
        <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" /> }
    @section ScriptPage{
        <script src="@Url.Content("~/scripts/DataTables/jquery.dataTables.js")"></script>
        <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>
        <script type="text/javascript">
        $(document).ready(function () {
            $('.table').dataTable({
                "order": [[0, "asc"]]
            });
        }); </script>
    }
</div>